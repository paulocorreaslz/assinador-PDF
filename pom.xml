	<profiles>
    <profile>
      <id>production</id>
      <activation>
        <property><name>FIRMADOR_PROD</name></property>
      </activation>
      <build>
        <plugins>


			<!--    FIRMA DEL JAR -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jarsigner-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<id>sign</id>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
 				    <keystore>${env.FIRMADOR_KEYSTORE}</keystore>			
					<alias>${env.FIRMADOR_ALIAS}</alias>
					<storepass>${env.FIRMADOR_STOREPASS}</storepass>
					<keypass>${env.FIRMADOR_KEYPASS}</keypass>
				</configuration>
			</plugin>


			<!--    POST COMPILACION -->
             <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.4</version>
                <executions>
                  <execution>
                    <id>copy</id>
                    <phase>install</phase>
                    <configuration>
                      <tasks>
                        <copy file="target/FirmaApplet-1.0-jar-with-dependencies.jar" tofile="sample/www/firmador.jar"/>
                      </tasks>
                    </configuration>
                    <goals>
                      <goal>run</goal>
                    </goals>
                  </execution> 
                </executions>
              </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
    <properties>
        <project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
    </properties>
